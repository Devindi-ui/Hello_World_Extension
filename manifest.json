{
    "manifest_version": 3,
    "name": "Hello World",
    "version": "1.0",
    "description": "A simple hello world browser extension",
    "permission": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "My Extension"
    },
    "icons": {
        "24": "icons/icon24.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    }
}